@model AddFormSubmitDateViewModel
@{
    ViewBag.Title = "Add Form Date";
}

<h2>Add Form Date</h2>
<hr />

<form method="post" id="frm_submit" asp-antiforgery="true">
    <div class="form-horizontal">
        <hr />
        @if (ViewBag.DateModified != null)
        {
            <div class="alert alert-success" role="alert">
                <strong>Success !!</strong> @ViewBag.DateModified
            </div>
        }
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label class="control-label col-md-2" asp-for="FormDate">URL Text<span style="color:red">*</span></label>
            <div class="col-md-10">
                <input asp-for="FormDate" autocomplete="off" class="form-control" />
                <span class="field-validation-valid text-danger" asp-validation-for="FormDate"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="new-btn">
                    <i class="fa fa-spinner fa-spin" style="display:none;"></i>Add URL
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script type="text/javascript">

        $('#frm_submit').submit(function () {
            $('.fa.fa-spinner.fa-spin').show();
        })
    </script>
}